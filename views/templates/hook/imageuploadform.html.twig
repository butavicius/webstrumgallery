<h2>{{ galleryTitle }}</h2>
<div id="wg-product-images-container" class="mb-4">
	<div id="wg-product-images-dropzone" class="panel dropzone col-md-12" url-upload="{{ path('admin_product_wg_image_upload', {'productId': productId}) }}" url-position="{{ path('admin_product_wg_image_positions', {'productId': productId}) }}" data-max-size="{{ configuration('PS_LIMIT_UPLOAD_IMAGE_VALUE') }}">
		{% if images is defined %}
				<div class="dz-preview dz-button disabled wg-openfilemanager">
					<div class="dz-image" style="display: flex; justify-content: center; align-items: center; overflow: hidden; border-color: {{ galleryColor }}">
						<span style="font-size: 3rem; cursor: pointer; padding: 2rem;">+</span>
					</div>
				</div>
			{% for image in images %}
				<div class="dz-preview dz-image-preview ui-sortable-handle dz-complete" data-id="{{ image.id }}" url-delete="{{ path('admin_product_wg_image_delete', {'imageId': image.id})}}" style="z-index: 1; position: relative; opacity: 1; left: 0px; top: 0px;">
					<div class="dz-image"><img data-dz-thumbnail="" alt="" src="{{ image.url }}" ></div>
					<a class="dz-remove" href="javascript:undefined;" data-dz-remove="{{ image.id }}">Delete</a>
				</div>
			{% endfor %}
		{% endif %}
	</div>
</div>

<script type="text/javascript" src="/modules/webstrumgallery/views/js/back.js"></script>
